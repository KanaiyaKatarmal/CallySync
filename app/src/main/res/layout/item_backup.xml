<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:elevation="4dp"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fileNameText"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="File Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fileLocationText"
            android:text="Local/DB/test.text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fileDateText"
            android:text="23-07-2023 10:110AM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView android:id="@+id/btnRestore" android:text="Restore"
                android:layout_weight="1" android:gravity="center" android:padding="6dp"
                android:textColor="@android:color/black" android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView android:id="@+id/btnView" android:text="View"
                android:layout_weight="1" android:gravity="center" android:padding="6dp"
                android:textColor="@android:color/black" android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView android:id="@+id/btnUpload" android:text="Upload"
                android:layout_weight="1" android:gravity="center" android:padding="6dp"
                android:textColor="@android:color/black" android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView android:id="@+id/btnDelete" android:text="Delete"
                android:layout_weight="1" android:gravity="center" android:padding="6dp"
                android:textColor="@android:color/black" android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>